<p id="notice"><%# notice %></p>

<%# <h1>Phones Nearby You</h1> %>

<table class='pure-table' style='width: 100%'>
  <thead>
    <tr>
      <% if @calls.count == 1 %>
        <th class='pure-table-odd'><%= t('index_na_ph') %></th>
      <% else %>
        <th><%= t('index_ph') %></th>
      <% end %>    
      <%# <th>La</th>
      <th>Lo</th>
      <th>Ip</th>
      <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr class='pure-table-odd'>
        <% if session[:current_tel] != call.tel %>
          <td><a href="tel:<%= call.tel %>"><font size=5><%= call.action !='' ? call.action : call.tel %></font></a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @calls.count != 1 %>
<%= link_to 'Edit', :controller => 'calls', :action => 'edit', :id => session[:current_id] %>
|
<%= link_to 'End', Call.find(session[:current_id]), method: :delete, data: { confirm: 'Stop to make your call visible for people nearby you?' } %> 
<% end %>

